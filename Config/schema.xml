<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="TheliaMain">
    <!--
    See propel documentation on http://propelorm.org for all information about schema file
    -->
    <table name="guaranteed_opinion_product_review">
        <column name="id" autoIncrement="true" type="INTEGER" required="true" primaryKey="true" />
        <column name="product_review_id" type="VARCHAR" size="55" required="true" />
        <column name="review_id" type="VARCHAR" size="55" required="true" />
        <column name="email" type="VARCHAR" size="255" />
        <column name="last_name" type="VARCHAR" size="255" />
        <column name="first_name" type="VARCHAR" size="255" />
        <column name="review_date" type="TIMESTAMP" />
        <column name="message" size="10000" sqlType="VARBINARY(10000)" type="VARCHAR"/>
        <column name="rating" type="FLOAT"/>
        <column name="order_id" type="VARCHAR" size="255"/>
        <column name="product_id" type="VARCHAR" size="255"/>

        <unique name="product_review_id_unique">
            <unique-column name="product_review_id"/>
        </unique>

        <unique name="review_id_unique">
            <unique-column name="review_id"/>
        </unique>
    </table>

    <table name="guaranteed_opinion_site_review">
        <column name="id" autoIncrement="true" type="INTEGER" required="true" primaryKey="true" />
        <column name="review_id" type="VARCHAR" size="255" required="true" />
        <column name="last_name" type="VARCHAR" size="255" />
        <column name="first_name" type="VARCHAR" size="255" />
        <column name="review_date" type="TIMESTAMP"/>
        <column name="message" size="10000" sqlType="VARBINARY(10000)" type="VARCHAR"/>
        <column name="rating" type="FLOAT"/>
        <column name="order_id" type="VARCHAR" size="255"/>

        <unique name="review_id_unique">
            <unique-column name="review_id"/>
        </unique>
    </table>

    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
</database>
